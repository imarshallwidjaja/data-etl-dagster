# =============================================================================
# Spatial Data ETL Pipeline - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=spatial-etl
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# MinIO Configuration (S3-Compatible Object Storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secret_password_change_me
MINIO_ENDPOINT=minio:9000
MINIO_USE_SSL=false

# Bucket Names
MINIO_LANDING_BUCKET=landing-zone
MINIO_LAKE_BUCKET=data-lake

# -----------------------------------------------------------------------------
# MongoDB Configuration (Metadata Ledger)
# -----------------------------------------------------------------------------
MONGO_INITDB_ROOT_USERNAME=mongo_admin
MONGO_INITDB_ROOT_PASSWORD=mongo_secret_password_change_me
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=spatial_etl

# -----------------------------------------------------------------------------
# PostGIS Configuration (Spatial Compute Engine)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgis_admin
POSTGRES_PASSWORD=postgis_secret_password_change_me
POSTGRES_DB=spatial_compute
POSTGRES_HOST=postgis
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Dagster Configuration
# -----------------------------------------------------------------------------
DAGSTER_HOME=/opt/dagster/dagster_home
DAGSTER_POSTGRES_USER=dagster_admin
DAGSTER_POSTGRES_PASSWORD=dagster_secret_password_change_me
DAGSTER_POSTGRES_DB=dagster
DAGSTER_POSTGRES_HOST=dagster-postgres
DAGSTER_POSTGRES_PORT=5433

# Dagster Webserver
DAGSTER_WEBSERVER_HOST=0.0.0.0
DAGSTER_WEBSERVER_PORT=3000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

